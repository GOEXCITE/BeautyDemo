<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="380px">

    // Cell width
    <TextView
        android:id="@+id/shopTitleTextView"
        android:text="AXY 銀座店"
        android:layout_width="384dip"
        android:layout_height="50px"
        android:gravity="center_vertical"
        android:paddingLeft="20dip"
        android:textSize="40px"
        android:textStyle="bold"
        android:paddingStart="20dip"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/aaa" />

    <TextView
        android:id="@+id/addressLabel"
        android:layout_marginTop="-150dp"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_marginLeft="170dp"
        android:gravity="center_vertical"
        android:textSize="28px"
        android:textStyle="bold"
        android:text="住所" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="10px"
        android:textSize="28px"
        android:textStyle="bold"
        android:text="東京都立川市曙町２－１８－１７　町田ビル５F" />

    <TextView
        android:id="@+id/accessLabel"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_marginTop="20px"
        android:gravity="center_vertical"
        android:layout_marginLeft="170dp"
        android:textSize="28px"
        android:textStyle="bold"
        android:text="アクセス" />

    <TextView
        android:id="@+id/accessTextView"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="100px"
        android:layout_marginRight="10px"
        android:layout_marginLeft="170dp"
        android:textSize="28px"
        android:textStyle="bold"
        android:text="立川駅北口を出て直進しお隣にはドン・キホーテがあります。ビックカメラを超え、立川通りを渡り、さらに少し進むと左手に町田ビルがあ" />

</LinearLayout>